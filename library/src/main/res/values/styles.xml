<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenHeaderTitleStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textBasePrimaryColor</item>
        <item name="android:textSize">28dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="ssparkFont">bold</item>
    </style>

    <style name="ScreenHeaderSubTitleStyle">
        <item name="android:textColor">@color/textBaseThirdColor</item>
        <item name="android:textSize">13dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="ssparkFont">regular</item>
    </style>

    <style name="MenuContactInfoDialogAnimationStyle">
        <item name="android:windowEnterAnimation">@animator/slide_up</item>
        <item name="android:windowExitAnimation">@animator/slide_down</item>
    </style>
</resources>