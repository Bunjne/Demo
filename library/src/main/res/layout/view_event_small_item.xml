<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="wrap_content">

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/cvBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:background_Color="@color/viewBaseSecondaryColor"
        app:background_Type="fill"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow0_Outer_Alpha="1"
        app:shadow0_Outer_Blur="30dp"
        app:shadow0_Outer_Color="@color/shadowColor"
        app:shadow_Outer_Area="4dp" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/textBasePrimaryColor"
        android:textSize="16dp"
        app:autoSizeMaxTextSize="14dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvImage"
        app:ssparkFont="bold"
        tools:text="AU CODE CAMP 2019" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvVenue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:ssparkFont="regular"
        tools:text="JOHN PAUL" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVenue"
        app:ssparkFont="regular"
        tools:text="MAY 5, 2019 09:00 HRS." />

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/cvImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:background_Color="@color/viewBaseSecondaryColor"
        app:background_Type="fill"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shadow0_Outer_Alpha="1"
        app:shadow0_Outer_Blur="30dp"
        app:shadow0_Outer_Color="@color/shadowColor"
        app:shadow_Outer_Area="4dp">

        <whiz.sspark.library.view.general.image_view.FixRatioImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/cities" />

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

</androidx.constraintlayout.widget.ConstraintLayout>