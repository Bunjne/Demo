<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvVerticalBar"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginVertical="4dp"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvTimeRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBasePrimaryColor"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvVerticalBar"
        app:layout_constraintTop_toTopOf="parent"
        app:ssparkFont="bold"
        tools:text="08:30 - 11:30" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/textBasePrimaryColor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvVerticalBar"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeRange"
        app:ssparkFont="bold"
        tools:text="THA ภาษาไทย" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvInstrucAndRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvVerticalBar"
        app:layout_constraintTop_toBottomOf="@+id/tvCourse"
        app:ssparkFont="regular"
        tools:text="อ.สมชาย เจริญสุข ห้องเรียน 205" />

</androidx.constraintlayout.widget.ConstraintLayout>