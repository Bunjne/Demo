<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="152dp"
    android:layout_height="wrap_content">

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/cvBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:background_Color="@color/viewBaseSecondaryColor"
        app:background_ColorType="solid"
        app:background_Type="fill"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow0_Outer_Alpha="1"
        app:shadow0_Outer_Blur="30dp"
        app:shadow0_Outer_Color="@color/shadowColor"
        app:shadow_Outer_Area="4dp" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvNewsSmallTextImageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/textBasePrimaryColor"
        android:textSize="15dp"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvImage"
        app:ssparkFont="boldSerif"
        tools:text="@tools:sample/lorem/random" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvNewsSmallTextImageAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNewsSmallTextImageTitle"
        app:ssparkFont="regularSerif"
        tools:text="ไม่มีข้อมูล" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvNewsSmallTextImageDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNewsSmallTextImageAuthor"
        app:ssparkFont="regularSerif"
        tools:text="Date" />

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/cvImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:visibility="visible"
        app:background_Color="@color/viewBasePrimaryColor"
        app:background_ColorType="solid"
        app:background_Type="fill"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow0_Outer_Alpha="1"
        app:shadow0_Outer_Blur="30dp"
        app:shadow0_Outer_Color="@color/shadowColor"
        app:shadow_Outer_Area="4dp">

        <whiz.sspark.library.view.general.TopCropImageView
            android:id="@+id/ivNewsSmallTextImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

</androidx.constraintlayout.widget.ConstraintLayout>