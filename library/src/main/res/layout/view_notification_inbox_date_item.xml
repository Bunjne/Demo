<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"
    android:paddingTop="14dp"
    android:paddingBottom="6dp">

    <View
        android:id="@+id/vLineLeft"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.8"
        android:background="@color/lineBasePrimaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vLineRight"
        app:layout_constraintStart_toEndOf="@+id/vLineLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:ssparkFont="regular"
        tools:text="20 ก.ค. 2564" />

    <View
        android:id="@+id/vLineRight"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.8"
        android:background="@color/lineBasePrimaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDate"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>