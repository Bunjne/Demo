<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/ivContactIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_phone" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvContactInfoHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBasePrimaryColor"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvContactDescription"
        app:layout_constraintEnd_toStartOf="@+id/ivEndIcon"
        app:layout_constraintStart_toEndOf="@+id/ivContactIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="somchai@gmail.com" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvContactDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivEndIcon"
        app:layout_constraintStart_toStartOf="@+id/tvContactInfoHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvContactInfoHeader"
        app:ssparkFont="regular"
        tools:text="อีเมล" />

    <ImageView
        android:id="@+id/ivEndIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>