<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/viewBaseSecondaryColor">

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvContactInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBasePrimaryColor"
        android:textSize="15dp"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeMinTextSize="11dp"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintBottom_toTopOf="@+id/tvContactTitle"
        app:layout_constraintEnd_toStartOf="@+id/ivMore"
        app:layout_constraintStart_toEndOf="@+id/ivContact"
        app:layout_constraintTop_toTopOf="parent"
        app:ssparkFont="regular"
        tools:text="02-564-4440 ต่อ 1782 , 1785" />

    <whiz.sspark.library.view.general.SSparkTextView
        android:id="@+id/tvContactTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textBaseThirdColor"
        android:textSize="13dp"
        app:autoSizeMaxTextSize="13dp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivMore"
        app:layout_constraintStart_toEndOf="@+id/ivContact"
        app:layout_constraintTop_toBottomOf="@+id/tvContactInformation"
        app:ssparkFont="regular"
        tools:text="โทรศัพท์" />

    <ImageView
        android:id="@+id/ivContact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvContactTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvContactInformation"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivContact"
        app:tint="@color/textBaseThirdColor"
        tools:src="@drawable/ic_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>