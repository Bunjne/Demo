<?xml version="1.0" encoding="utf-8"?>
<com.sinaseyfi.advancedcardview.AdvancedCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvBlock"
    android:layout_width="132dp"
    android:layout_height="160dp"
    android:layout_marginTop="16dp"
    app:background_Color="@color/viewBaseSecondaryColor"
    app:background_Type="fill"
    app:background_ColorType="solid"
    app:cornerRadius="16dp"
    app:shadow_Outer_Area="2dp"
    app:shadow0_Outer_Blur="30dp"
    app:shadow0_Outer_Color="@color/shadowColor"
    app:shadow0_Outer_Alpha="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <whiz.sspark.library.view.general.SSparkTextView
            android:id="@+id/tvNewsSmallTextOnlyTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llAuthorHolder"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:lines="5"
            android:maxLines="5"
            android:textColor="@color/textBasePrimaryColor"
            android:textSize="14dp"
            app:autoSizeMaxTextSize="14dp"
            app:autoSizeMinTextSize="10dp"
            app:autoSizeStepGranularity="1dp"
            app:ssparkFont="boldSerif"
            tools:text="@tools:sample/lorem/random" />

        <LinearLayout
            android:id="@+id/llAuthorHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <whiz.sspark.library.view.general.SSparkTextView
                android:id="@+id/tvNewsSmallTextOnlyAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textBaseThirdColor"
                android:textSize="12dp"
                app:ssparkFont="regularSerif"
                tools:text="ไม่มีข้อมูล" />

            <whiz.sspark.library.view.general.SSparkTextView
                android:id="@+id/tvNewsSmallTextOnlyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBaseThirdColor"
                android:textSize="12dp"
                app:ssparkFont="regularSerif"
                tools:text="Date" />

        </LinearLayout>

    </RelativeLayout>

</com.sinaseyfi.advancedcardview.AdvancedCardView>